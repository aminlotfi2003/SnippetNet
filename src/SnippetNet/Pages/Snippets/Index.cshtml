@page
@model SnippetNet.Pages.Snippets.IndexModel
@{
    ViewData["Title"] = "Snippets";
}
<h1 class="mb-3">Snippets</h1>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-6"><input name="q" value="@Model.q" class="form-control" placeholder="Search title/desc/code..." /></div>
    <div class="col-md-3"><input name="language" value="@Model.language" class="form-control" placeholder="Language (e.g., C#, JS)" /></div>
    <div class="col-md-3"><button class="btn btn-primary w-100">Search</button></div>
</form>

<table class="table table-striped text-center">
    <thead><tr><th>Title</th><th>Language</th><th>Created</th><th></th></tr></thead>
    <tbody>
        @foreach (var s in Model.Items)
        {
            <tr>
                <td>@s.Title</td>
                <td>@s.Language</td>
                <td>@s.CreatedAt.UtcDateTime.ToString("u")</td>
                <td><a asp-page="./Details" asp-route-id="@s.Id" class="btn btn-sm btn-outline-secondary">Details</a></td>
            </tr>
        }
    </tbody>
</table>

@if (User?.IsInRole("Contributor") == true || User?.IsInRole("Admin") == true)
{
    <a asp-page="./Create" class="btn btn-success">New Snippet</a>
}
