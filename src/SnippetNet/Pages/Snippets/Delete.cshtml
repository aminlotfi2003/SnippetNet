@page "{id:guid}"
@model SnippetNet.Pages.Snippets.DeleteModel
@{
    ViewData["Title"] = "Delete Snippet";
}
<h2>Delete Snippet</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this snippet?
</div>

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Vm.Title</dd>

    <dt class="col-sm-2">Language</dt>
    <dd class="col-sm-10">@Model.Vm.Language</dd>

    <dt class="col-sm-2">Public</dt>
    <dd class="col-sm-10">@(Model.Vm.IsPublic ? "Yes" : "No")</dd>

    <dt class="col-sm-2">Created</dt>
    <dd class="col-sm-10">@Model.Vm.CreatedAt.UtcDateTime.ToString("u")</dd>
</dl>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Details" asp-route-id="@Model.Vm.Id" class="btn btn-secondary">Cancel</a>
</form>
