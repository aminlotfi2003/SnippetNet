@using Microsoft.AspNetCore.Identity
@using SnippetNet.Infrastructure.Persistence
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item me-2">
            <span class="navbar-text">Hello, @User.Identity?.Name!</span>
        </li>
        @if (User.IsInRole("Contributor"))
        {
            <li class="nav-item"><span class="badge text-bg-primary me-2">Contributor</span></li>
        }
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item"><span class="badge text-bg-danger me-2">Admin</span></li>
        }

        <li class="nav-item">
            <form class="d-inline" method="post" asp-area="Identity" asp-page="/Account/Logout">
                <button class="btn btn-link nav-link" type="submit">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>
