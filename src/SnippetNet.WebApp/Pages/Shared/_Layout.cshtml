<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - SnippetNet</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/SnippetNet.WebApp.styles.css" asp-append-version="true" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="app-body">
	@{
		var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
	}
	<div class="app-wrapper d-flex flex-column min-vh-100">
		<header class="app-header shadow-sm">
			<nav class="navbar navbar-expand-lg navbar-dark bg-gradient-primary py-3">
				<div class="container-xl">
					<a class="navbar-brand fw-semibold" asp-area="" asp-page="/Index">
						<span class="d-inline-flex align-items-center gap-2">
							<i class="bi bi-code-slash fs-4"></i>
							SnippetNet
						</span>
					</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="mainNav">
						<ul class="navbar-nav ms-auto align-items-lg-center gap-lg-3">
							<li class="nav-item">
								<a class="nav-link @((currentPage == "/Index") ? "active" : null)" asp-area="" asp-page="/Index">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link @((currentPage == "/Snippets/Index") ? "active" : null)" asp-area="" asp-page="/Snippets/Index">Snippets</a>
							</li>
							<li class="nav-item">
								<a class="nav-link @((currentPage == "/Privacy") ? "active" : null)" asp-area="" asp-page="/Privacy">Privacy</a>
							</li>
						</ul>
						<div class="ms-lg-4 mt-3 mt-lg-0">
							<a class="btn btn-light btn-sm text-primary-emphasis fw-semibold shadow-sm" asp-area="" asp-page="/Snippets/Create">
								<i class="bi bi-plus-circle me-1"></i>
								New snippet
							</a>
						</div>
					</div>
				</div>
			</nav>
		</header>
		<main role="main" class="flex-grow-1">
			@RenderSection("Hero", required: false)
			<div class="page-shell container-xl py-5">
				@RenderBody()
			</div>
		</main>
		<footer class="app-footer border-top mt-auto">
			<div class="container-xl d-flex flex-column flex-md-row align-items-center justify-content-between gap-3 py-4">
				<div class="text-white-50 small">
					&copy; @DateTime.UtcNow.Year SnippetNet. Built to keep your favourite snippets close.
				</div>
				<div class="d-flex align-items-center gap-3">
					<a asp-area="" asp-page="/Privacy" class="link-light text-decoration-none">Privacy</a>
					<span class="text-white-50 small">Crafted with <i class="bi bi-heart-fill text-danger"></i> for developers.</span>
				</div>
			</div>
		</footer>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
