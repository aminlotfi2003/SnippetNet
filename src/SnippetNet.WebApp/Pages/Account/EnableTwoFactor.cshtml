@page
@model SnippetNet.WebApp.Pages.Account.EnableTwoFactorModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="glass-card p-4 p-lg-5 shadow-sm">
            <h1 class="h4 fw-semibold mb-3">Secure your account</h1>
            <p class="muted-text">Add an extra layer of protection by enabling two-step verification via email.</p>

            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert @(Model.TwoFactorEnabled ? "alert-success" : "alert-info")">@Model.StatusMessage</div>
            }

            <div class="mb-4">
                <span class="badge @(Model.TwoFactorEnabled ? "bg-success" : "bg-secondary")">@((Model.TwoFactorEnabled ? "Enabled" : "Disabled"))</span>
            </div>

            <form method="post" asp-page-handler="Generate" class="mb-3">
                <button type="submit" class="btn btn-outline-primary" @(Model.TwoFactorEnabled ? "disabled" : null)>Generate verification code</button>
            </form>

            @if (!string.IsNullOrEmpty(Model.GeneratedToken))
            {
                <div class="alert alert-warning">
                    <div class="fw-semibold mb-1">Verification code generated</div>
                    <p class="mb-0">Enter the code <code>@Model.GeneratedToken</code> below to enable two-factor authentication.</p>
                </div>
            }

            <form method="post" asp-page-handler="Enable">
                <div class="mb-3">
                    <label asp-for="Input.Token" class="form-label">Verification code</label>
                    <input asp-for="Input.Token" class="form-control" placeholder="Enter code" />
                    <span asp-validation-for="Input.Token" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" @(Model.TwoFactorEnabled ? "disabled" : null)>Enable two-factor</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
