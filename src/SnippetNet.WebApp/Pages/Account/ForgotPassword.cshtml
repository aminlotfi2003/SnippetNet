@page
@model SnippetNet.WebApp.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot password";
    var resetToken = ViewData["ResetToken"] as string;
    var email = ViewData["Email"] as string;
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="glass-card p-4 p-lg-5 shadow-sm">
            <h1 class="h3 fw-semibold mb-3">Reset your password</h1>
            <p class="muted-text mb-4">Enter your email address and we'll generate a reset token for you.</p>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email address</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Send reset instructions</button>
            </form>

            @if (!string.IsNullOrEmpty(resetToken))
            {
                <div class="alert alert-info mt-4">
                    <div class="fw-semibold mb-1">Reset token generated</div>
                    <p class="mb-2">Use the following token to reset the password for <strong>@email</strong>:</p>
                    <code class="d-block p-2 bg-dark-subtle rounded">@resetToken</code>
                    <p class="small text-muted mt-2 mb-0">Store this token securely. In a production app this would be delivered by email.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
