@page
@model SnippetNet.WebApp.Pages.Account.VerifyResetCodeModel
@{
    ViewData["Title"] = "Verify reset code";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="glass-card p-4 p-lg-5 shadow-sm">
            <h1 class="h3 fw-semibold mb-3">Enter the verification code</h1>
            <p class="muted-text mb-4">
                We've sent a 6-digit code to <strong>@Model.Input.Email</strong>. Enter it below to continue.
            </p>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Input.Email" />

                <div class="mb-3">
                    <label asp-for="Input.Code" class="form-label">Verification code</label>
                    <input asp-for="Input.Code" class="form-control" autocomplete="one-time-code" inputmode="numeric" />
                    <span asp-validation-for="Input.Code" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Verify code</button>
            </form>

            <p class="small text-muted mt-4 mb-0">
                Didn't get the email? <a asp-page="ForgotPassword">Request a new code</a>.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
