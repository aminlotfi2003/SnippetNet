@page "{id:guid}"
@model SnippetNet.WebApp.Pages.Snippets.DetailsModel
@{
    ViewData["Title"] = "Snippet Details";
}

@if (Model.Snippet is null)
{
    <div class="alert alert-danger">Snippet not found.</div>
}
else
{
    var snippet = Model.Snippet;

    <div class="glass-card p-4 p-lg-5 shadow-sm">
        <div class="detail-header d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
            <div>
                <span class="badge badge-soft px-3 py-2 text-uppercase small">@snippet.Language</span>
                <h1 class="display-6 fw-semibold mt-3 mb-2">@snippet.Title</h1>
                <p class="muted-text mb-0">@snippet.Description</p>
            </div>
            <div class="d-flex flex-wrap gap-2">
                <a asp-page="Edit" asp-route-id="@snippet.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square me-2"></i>
                    Edit snippet
                </a>
                <a asp-page="Delete" asp-route-id="@snippet.Id" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i>
                    Delete
                </a>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>
                    Back to library
                </a>
            </div>
        </div>

        <div class="detail-meta mb-4">
            <div class="detail-tile">
                <div class="muted-text text-uppercase small mb-1">Language</div>
                <div class="fw-semibold">@snippet.Language</div>
            </div>
            <div class="detail-tile">
                <div class="muted-text text-uppercase small mb-1">Tag</div>
                <div class="fw-semibold">@snippet.TagName</div>
            </div>
        </div>

    <!-- Action Buttons -->
        <div class="code-container">
            <button type="button" class="btn btn-sm copy-btn" data-copy-button>
                <i class="bi bi-clipboard-check me-1"></i>
                Copy
            </button>
            <pre id="snippetCode"><code class="language-@snippet.Language.ToLower()">@snippet.Code</code></pre>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const copyButton = document.querySelector('[data-copy-button]');
            const codeElement = document.getElementById('snippetCode');

            if (!copyButton || !codeElement) {
                return;
            }

            copyButton.addEventListener('click', () => {
                const text = codeElement.innerText.trim();
                navigator.clipboard.writeText(text).then(() => {
                    const toast = document.createElement('div');
                    toast.classList.add('copied-toast');
                    toast.textContent = 'Copied!';
                    copyButton.parentElement.appendChild(toast);
                    setTimeout(() => toast.remove(), 1400);
                });
            });
        });
    </script>
}
